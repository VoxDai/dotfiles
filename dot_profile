# Load ~/.bashrc for bash login shells
if [ -n "$BASH_VERSION" ]; then
    if [ -f "$HOME/.bashrc" ]; then
        . "$HOME/.bashrc"
    fi
fi


# User-local PATH
if [ -d "$HOME/bin" ]; then
    PATH="$HOME/bin:$PATH"
fi

if [ -d "$HOME/.local/bin" ]; then
    PATH="$HOME/.local/bin:$PATH"
fi


# Auto-start zsh if available (interactive login only)
# Only run in interactive terminals (avoid scp / ssh command)
if [ -t 1 ]; then
    if [ -z "$ZSH_VERSION" ]; then
        if command -v zsh >/dev/null 2>&1; then
            exec zsh
        fi
    fi
fi
